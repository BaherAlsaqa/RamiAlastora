<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout">

    <TextView
        android:id="@+id/notificationbadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_badge"
        android:paddingStart="@dimen/paddingstartend17dp"
        android:paddingTop="@dimen/paddingtopbottom3dp"
        android:paddingEnd="@dimen/paddingstartend17dp"
        android:paddingBottom="@dimen/paddingtopbottom3dp"
        android:text="99"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_badge" />
</androidx.constraintlayout.widget.ConstraintLayout>